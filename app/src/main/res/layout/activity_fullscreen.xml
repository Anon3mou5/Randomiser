<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:tools="http://schemas.android.com/tools"
        style="@style/Theme.AppCompat.NoActionBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffffff"
        android:orientation="vertical"
        tools:context=".FullscreenActivity">


    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/button_rounder"
        android:backgroundTint="#E8E8E8"
        android:fontFamily="@font/bangers"
        android:includeFontPadding="true"


        android:paddingBottom="15dp"
        android:text="@string/randomizer"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@android:color/background_dark"
        android:textSize="80sp"
        tools:text="@string/randomizer" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="254dp"
        android:layout_marginHorizontal="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:includeFontPadding="true"
        android:padding="-40dp"
        android:textAlignment="center"
        android:textColor="#706F6F"
        android:textSize="200dp"
        tools:text="@android:string/ok" />

    <SeekBar
        android:id="@+id/seekBar"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="140dp"
        android:backgroundTintMode="add"
        android:max="10"
        android:maxWidth="6dp"
        android:maxHeight="20dp"
        android:minWidth="6dp"
        android:minHeight="20dp"
        android:progress="1"
        android:progressBackgroundTint="#DBDBDB"
        android:progressBackgroundTintMode="src_in"
        android:progressTint="#2C2C2C"
        android:progressTintMode="multiply"
        android:scrollbarSize="15dp"
        android:scrollbarStyle="outsideOverlay"
        android:secondaryProgressTint="#CCCCCA"
        android:theme="@style/Base.TextAppearance.AppCompat.Widget.Button.Colored"
        android:thumbTint="#EE1506"
        android:thumbTintMode="multiply"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginStart="163dp"
        android:layout_marginTop="-135dp"
        android:layout_marginEnd="163dp"
        android:layout_marginBottom="110dp"
        android:background="@drawable/rounder"
        android:backgroundTint="#F5D3D3D3"
        android:fontFamily="sans-serif"
        android:padding="1dp"
        android:textAlignment="center"
        android:textSize="30sp"
        android:visibility="visible" />

    <Button
        android:id="@+id/button"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="205dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="93dp"
        android:layout_marginTop="-60dp"
        android:background="@drawable/button_rounder"
        android:backgroundTint="#0A0A0A"
        android:fontFamily="@font/bangers"
        android:includeFontPadding="false"
        android:stateListAnimator="@android:anim/fade_in"
        android:text="@string/roll"

        android:textAlignment="center"
        android:textSize="50sp"
        android:typeface="normal" />

</LinearLayout>
